<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spinner_item"
    android:background="@xml/list_dropdown_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dropdown_padding">

    <ImageView
        android:id="@+id/spinner_item_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_list"
        android:layout_marginRight="@dimen/dropdown_padding"
        android:layout_marginEnd="@dimen/dropdown_padding"
        android:contentDescription="@string/list_icon_description"/>

    <TextView
        android:id="@+id/spinner_item_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:textSize="@dimen/text"/>

</LinearLayout>